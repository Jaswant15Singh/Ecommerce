            <h1 style="margin-top: 3rem;font-weight: lighter;font-size: 2rem;">
                Create Account
            </h1>
            <form action="#" id="create_user" accept-charset="UTF-8" data-login-with-shop-sign-up="true"
                novalidate="novalidate"><input type="hidden" name="form_type" value="create_customer"><input
                    type="hidden" name="utf8" value="âœ“">

                <div class="field">
                    <input type="text" name="user_name" id="RegisterForm-Name" autocomplete="family-name"
                        placeholder="Name">
                    <!-- <label for="RegisterForm-LastName">
                        Last name
                    </label> -->
                </div>
                <div class="field">
                    <input type="email" name="email" id="RegisterForm-email" spellcheck="false" autocapitalize="off"
                        autocomplete="email" aria-required="true" placeholder="Email">
                    <!-- <label for="RegisterForm-email">
                        Email
                    </label> -->
                </div>
                <div class="field">
                    <input type="text" name="phone_no" id="RegisterForm-PhoneNo" autocomplete="family-name"
                        placeholder="Phone No">
                    <!-- <label for="RegisterForm-LastName">
                        Last name
                    </label> -->
                </div>
                <div class="field">
                    <input type="password" name="password" id="RegisterForm-password" aria-required="true"
                        placeholder="Password">
                    <!-- <label for="RegisterForm-password">
                        Password
                    </label> -->
                </div>
                <button class="button" type="submit">
                    Create
                </button>
            </form>
            <p class="my-3">Already have an account?<span><a style="color: #0070CC;" href="/account/userlogin">Sign
                        In</a></span></p>

        </div>

        <script>
            document.getElementById("create_user").addEventListener("submit", async (e) => {
              e.preventDefault(); 
          
              const formData = {
                user_name: document.querySelector("[name=user_name]").value,
                phone_no: document.querySelector("[name=phone_no]").value,
                email: document.querySelector("[name=email]").value,
                password: document.querySelector("[name=password]").value
              };
          
              try {
                let res = await fetch("<%= (url_pathname) %>admin/create-user", {
                  method: "POST",
                  headers: {
                    "Content-Type": "application/json"
                  },
                  body: JSON.stringify(formData)
                });
          
                // Parse the response
                res = await res.json();
          
                if (res.success) {
                  showPopup("Success", "User has been registered", "Success");
                } else {
                  showPopup("Error", res.message || "Registration failed", "Failure");
                }
              } catch (error) {
                console.error("Error during registration:", error);
                showPopup("Error", "An unexpected error occurred. Please try again.", "Failure");
              }
            });
          </script>
          
