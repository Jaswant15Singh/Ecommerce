                  //   'Stock Limit Reached',
                  //   'warning'
                  // );
                }
              }
            });

            const li = document.createElement('li');
            li.classList.add('items', 'odd');
      

            const priceBlock = item.quantity > 0 ? (item.unitData ?
              `
        <div class="cartSubsection">
