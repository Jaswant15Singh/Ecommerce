<body class="bg-gray-50">
    <div id="content">
        <div class="loading-bar">
           <div class="blue-bar"></div>
        </div>
      </div>
    <div class="overlay"></div>
    <div class="form-wrapper">
        <h1 class="title">Customer Details</h1>
        <form class="contact-form" id="contact-form" autocomplete="off">
            <h1 class="close-button"><i class="fa-solid fa-x"></i></h1>
            <div class="form-row">
                <div class="form-column">
                    <label for="contact" class="form-label">Contact</label>
                    <div style="position: relative; display: inline-block;">
                        <input type="text" 
                        id="customer_phone" 
                        name="contact_x1234"
                         required 
                        minlength="10" 
                        maxlength="10" 
                        pattern="^(\+91[\-\s]?)?[0]?(91)?[6789]\d{9}$" 
                        inputmode="numeric"
                        oninput="validateFirstDigit(this)" 
                        placeholder="Your Contact" 
                        class="form-input" 
                        style="border: 1px solid #d1d5db; padding-right: 40px;"
                         autocomplete="off" />
                 
                        
                        <button type="button" id="search-btn" disabled
                                style="position: absolute; right: 5px; top: 50%; transform: translateY(-50%); 
                                       border: none; background: none;opacity: 0.4;">
                            üîç
                        </button>
                    </div>
                    <span style="color: red;font-size: smaller;display: none;text-shadow: 1px 0px 13px rgba(241,24,24,0.87);" id="error_msg" class="error_msg"></span>
                </div>
                <div class="form-column">
                    <label for="name" class="form-label">Name</label>
                    <input type="text" id="customer_name" name="customer_name" required autofocus minlength="3"
                        pattern="[A-Za-z\s]+" title="Please enter only letters and spaces." placeholder="Your name"
                        class="form-input" required disabled  autocomplete="off">
                </div>
               
            </div>
            <div class="form-row">
                <div class="form-column">
                    <label for="email" class="form-label">Email</label>
                    <input id="customer_email" name="customer_email" placeholder="Your Email Address" type="email" class="form-input"
                        required disabled  autocomplete="off">
                </div>
                <div class="form-column">
                    <label for="subject" class="form-label">Address</label>
                    <input id="customer_address" placeholder="Your Address" required type="text"
                        title="Please enter only letters and spaces." name="customer_address" class="form-input" disabled>
                    </input>
                </div>
            </div>

            <div class="form-row">

                <div class="form-column">
                    <label for="subject" class="form-label">PinCode</label>
                    <input id="customer_pincode" placeholder="Pincode" type="tel" tabindex="3" required inputmode="numeric"
                        oninput="this.value = this.value.replace(/[^0-9]/g, '')" maxlength="6" name="customer_pincode" class="form-input" disabled  autocomplete="off">

                </div>
                <div class="form-column">
                    <label for="subject" class="form-label">City</label>
                    <input id="customer_city" placeholder="Your City"  required 
                    name="customer_city" class="form-input" disabled  autocomplete="off">
                </div>
            </div>
            <div class="form-row">
                <div class="form-column">
                    <select name="" id="stateForm" class="form-input" disabled  autocomplete="off">
                        <option value="Na" disabled selected>Select State</option>
                        <option value="maharashtra">Maharashtra</option>
                    </select>
                </div> 

            </div>
            <button type="submit" class="submit-button">Submit</button>
        </form>
    </div>
    <div class="flex flex-col md:flex-row h-screen">
        <!-- Products Section -->
        <div class="w-full md:w-2/3 p-6 overflow-y-auto bg-gray-100">
            <div class="flex justify-between items-center mb-6">
                <h1 class="text-3xl font-bold text-gray-800">POS System</h1>
                <div class="relative">
                    <input type="text" id="search" placeholder="Search products..."
                        class="pl-10 pr-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-400 focus:border-transparent">
                    <i class="fas fa-search absolute left-3 top-3 text-gray-400"></i>
                </div>
            </div>
            <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-3" id="products">
                <!-- Product cards dynamically inserted here -->
            </div>
        </div>
    
        <!-- Cart Section -->
       <!-- Cart Section (Right) -->
<div class="w-full md:w-1/3 bg-white shadow-lg p-6 flex flex-col border-l border-gray-300 h-screen">    
    <!-- Cart Items Container -->
    <div id="cart-items" class="flex flex-col space-y-2 overflow-y-auto flex-grow">
        <!-- Cart items will be dynamically inserted here -->
    </div>

    <div class="border-t pt-2" style="max-height: 50vh;overflow-y: scroll;scrollbar-width: none;">
        <div class="flex justify-between text-md mb-1">
            <span>Subtotal:</span>
            <span id="subtotal">&#8377;0.00</span>
        </div>
        <div class="flex justify-between text-md mb-1">
            <span>Tax (10%):</span>
            <span id="tax">&#8377;0.00</span>
        </div>
        <div class="flex justify-between text-lg font-bold">
            <span>Total:</span>
            <span id="total">&#8377;0.00</span>
        </div>
        <div class="grid grid-cols-1 gap-4 mt-3" id="paymentButtons">
            <div>
              <button class="bg-white-400 text-dark py-2 px-2 rounded-lg hover:bg-blue-600 payment-mode w-100"
                  data-payment-type="cash">
                  <i class="fa-solid fa-money-bill-wave mr-2"></i>Cash
              </button>
            </div>
          
            <div>
              <button class="bg-white-400 text-dark py-2 px-2 rounded-lg hover:bg-blue-600 payment-mode w-100"
                  data-payment-type="cheque">
                  <i class="fa-solid fa-credit-card mr-2"></i>Cheque
              </button>
            </div>
          
            <div>
              <button class="bg-white-400 text-dark py-2 px-2 rounded-lg hover:bg-blue-600 payment-mode w-100"
                  data-payment-type="neft">
                  <i class="fa-solid fa-credit-card mr-2"></i>NEFT
              </button>
            </div>
          
            <div>
              <button class="bg-white-400 text-dark py-2 px-2 rounded-lg hover:bg-blue-600 payment-mode w-100"
                  data-payment-type="online">
                  <i class="fa-solid fa-credit-card mr-2"></i>Online
              </button>
            </div>
          </div>
          
        <div class="grid grid-cols-2 gap-4 mt-3">
            <button onclick="clearCart()" class="bg-red-400 text-white py-2 px-2 rounded-lg hover:bg-red-600 transition-colors">
                <i class="fas fa-trash mr-2"></i>Clear
            </button>
            <button onclick="checkout()" class="bg-green-400 text-white py-2 px-2 rounded-lg hover:bg-green-600 transition-colors checkout-btn" id="checkout_button">
                <i class="fas fa-check mr-2"></i>Checkout
            </button>
        </div>
    </div>
</div>

    </div>
    

    <!-- Receipt Template (Hidden by default) -->
    <div id="receipt" class="receipt hidden fixed inset-0 bg-white p-8" style="width: 300px; margin: auto;">
        <!-- Receipt content will be dynamically inserted here -->
    </div>
