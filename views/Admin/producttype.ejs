					<thead>
						<tr>
							<th>Sr No</th>
							<th>Type</th>
							<th>Label Name</th>
							<th>Batch Quantity</th>
							<th>Inserted Date</th>
							<th>Update</th>
						</tr>
					</thead>
					<tbody></tbody>
				</table>
				<div id="pagination" style="margin-top: 20px;"></div>
