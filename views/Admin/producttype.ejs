	<main>


		<div class="table-data">
			<div class="order">
				<div class="head">
					<h3>Product Units</h3>
					<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal"
						onclick="setTypeProducts()">
						Add New Type
					</button>


					<div class="modal fade" style="width: 100%;" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
						aria-hidden="true">
						<div class="modal-dialog">
							<div class="modal-content">
								<div class="modal-header">
									<h1 class="modal-title fs-5" id="exampleModalLabel">Add Product</h1>
									<button type="button" class="btn-close" data-bs-dismiss="modal"
										aria-label="Close"></button>
								</div>
								<div class="modal-body">
									<div class="container my-5">
										<div class="row justify-content-center">
											<div class="col-lg-9">
												<form id="product-type-form">
													<div class="row g-3">
														<div class="col-md-12">
															<label for="quantity" class="form-label">Labe
																Name</label>
																<select name="quantity" id="quantity" required>
																	<option value="" disabled selected>Select a type</option> 
																	<option value="kg">Kg</option>
																	<option value="litres">Litres</option>
																</select>
																
														</div>
														<div class="col-md-12">
															<label for="label_name" class="form-label">Labe
																Name</label>
															<input type="text" class="form-control"
																id="label_name" name="label_name"
																required style="border: 1px solid black;">
														</div>
														<div class="col-md-12">
															<label for="batch_quantity" class="form-label">Batch Quantity(consider in terms of Kg and L,if 100g then 0.1)</label>
															<input type="text" class="form-control" id="batch_quantity" inputmode="decimal" 
																oninput="this.value = this.value.replace(/[^0-9.]/g, '').replace(/(\..*)\./g, '$1')" 
																name="batch_quantity" required style="border: 1px solid black;">
														</div>
														<input type="hidden" id="product-id" name="product_id">

														<div class="col-12">
															<button type="submit" class="btn btn-dark w-100 fw-bold">Add
																Product</button>
														</div>
													</div>
												</form>
											</div>
										</div>
									</div>


								</div>

							</div>
						</div>
					</div>
				</div>
