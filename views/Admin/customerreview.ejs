					<h3>Customer review</h3>
					<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
					aria-hidden="true">
					<div class="modal-dialog" >
						<div class="modal-content">
							<div class="modal-header">
								<h1 class="modal-title fs-5" id="exampleModalLabel">Update Review</h1>
								<button id="review-form" type="button" class="btn-close"
									data-bs-dismiss="modal" aria-label="Close"></button>
							</div>
							<div class="modal-body">
								<div class="container my-5">
									<div class="row justify-content-center">
										<div class="col-lg-9">
											<form id="review-form">
												<input type="hidden" id="category-id" name="blog_id">
												<div class="row g-3">													  
													<div class="col-md-12">
														<label for="product-featured"
															class="form-label">Visible</label>
														<input style="border: 1px solid black;" type="checkbox"
															class="form-check-input" id="review-hidden"
															name="visiblity">
													</div>
													<div class="col-12">
														<button type="submit"
															class="btn btn-dark w-100 fw-bold">Update
															Review</button>
													</div>
												</div>
											</form>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
				</div>
