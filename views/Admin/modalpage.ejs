<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Feedback Popup</title>
    <style>
        /* Popup Overlay */
        .popup {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: rgba(0, 0, 0, 0.5);
            z-index: 5000 !important;
        }

        /* Popup Content */
        .popup-content {
            background: white;
            padding: 60px 0px;
            border-radius: 10px;
            text-align: center;
            min-width: 500px;
            /* width: 90%; */
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
            animation: fadeIn 0.3s;
            position: relative;
        }

        .popup-content h2 {
            margin-bottom: 10px;
            font-size: 24px;
        }

        .popup-content p {
            font-size: 16px;
        }

        .popup-content button {
            position: absolute;
            top: 0;
            right: 0;
        }

        .hidden {
            display: none;
        }

        .close-btn {
            position: absolute;
            top: 5px;
            right: 15px;
            font-size: 35px;
       cursor: pointer;
        }

        /* Success & Failure Styling */
        .success {
            color: green;
        }

        .failure {
            color: red;
        }
    </style>
</head>

<body>
    <div id="feedbackBox" class="popup hidden">
        <div class="popup-content">

            <span id="closePopup" class="close-btn">&times;</span>
            <h2 id="popupHeading"></h2>
            <p id="popupMessage"></p>
        </div>
    </div>
    <script>
        function showPopup(title, message, status) {
            popupHeading.textContent = title;
            popupMessage.textContent = message;
            popupHeading.className = "status";
            document.getElementById("feedbackBox").classList.remove('hidden');
        }
            closePopup.addEventListener('click', () => {
                document.getElementById("feedbackBox").classList.add('hidden');
                // window.location.reload()
            });
    </script>
</body>

</html>



