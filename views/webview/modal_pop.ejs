<body>
    <div id="feedbackBox" class="popup">
        <div class="popup-content">
            <div class="checkmark-circle">
                <span id="checkmark">X</span>
            </div>
            <div class="success-icon" style="display: none;"><img src="/images/success.png"  height="80px" width="80px" style="margin: 0 auto;" loading="lazy" alt=""></div>
            <div class="failure-icon" style="display: none;"><img src="/images/error.png"  height="80px" width="80px"  style="margin: 0 auto;" loading="lazy"></div>

            
